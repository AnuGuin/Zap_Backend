generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"] 
}

datasource db {
  provider   = "postgresql"
  extensions = [vector]
}


enum Role {
  OWNER
  EDITOR
  VIEWER
}

enum ProcessingStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum KnowledgeType {
  PDF
  URL     
  TEXT
  YOUTUBE
  IMAGE
}


model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workspaces     WorkspaceMember[]
  createdItems   KnowledgeItem[]
}

model Workspace {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members   WorkspaceMember[]
  items     KnowledgeItem[]   @relation("WorkspaceItems")
  spaces    Space[]
  edges     Edge[]
  aiUsage   AIUsage[]
}

model WorkspaceMember {
  id          String   @id @default(uuid())
  role        Role     @default(VIEWER)
  userId      String
  workspaceId String
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
}


model KnowledgeItem {
  id          String           @id @default(uuid())
  title       String
  content     String?          @db.Text 
  summary     String?          @db.Text 
  sourceUrl   String?          
  
  type        KnowledgeType    @default(TEXT)
  status      ProcessingStatus @default(PENDING)
  metadata    Json?          
  
  workspaceId String
  workspace   Workspace        @relation("WorkspaceItems", fields: [workspaceId], references: [id], onDelete: Cascade)
  
  createdById String?
  createdBy   User?            @relation(fields: [createdById], references: [id])

  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  chunks      DocumentChunk[]
  entities    EntityOnDocument[]
  tags        Tag[]            @relation("ItemTags")
}

model DocumentChunk {
  id              String                 @id @default(uuid())
  content         String                 @db.Text
  embedding       Unsupported("vector")? 
  knowledgeItemId String
  item            KnowledgeItem          @relation(fields: [knowledgeItemId], references: [id], onDelete: Cascade)
  metadata        Json?                 
}


model Entity {
  id          String   @id @default(uuid())
  kgId        String   @unique  // Knowledge Graph ID
  name        String
  type        String   // Person, Organization, Concept, etc.
  description String?  @db.Text
  imageUrl    String?
  url         String?
  
  documents   EntityOnDocument[]
  
  @@index([name])
}

model EntityOnDocument {
  documentId String
  entityId   String
  confidence Float   @default(0.0)

  document   KnowledgeItem @relation(fields: [documentId], references: [id], onDelete: Cascade)
  entity     Entity        @relation(fields: [entityId], references: [id], onDelete: Cascade)

  @@id([documentId, entityId])
}

model Tag {
  id    String          @id @default(uuid())
  name  String          @unique
  items KnowledgeItem[] @relation("ItemTags")
}


model Space {
  id          String    @id @default(uuid())
  name        String
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  elements SpaceElement[]
}

model SpaceElement {
  id        String   @id @default(uuid())
  type      String   // "note", "shape", "connector"
  content   Json     // Position, text, properties
  spaceId   String
  space     Space    @relation(fields: [spaceId], references: [id], onDelete: Cascade)
}

model Edge {
  id          String    @id @default(uuid())
  type        String    // SUPPORTS, CONTRADICTS, RELATED
  sourceId    String
  targetId    String
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
}

model AIUsage {
  id          String    @id @default(uuid())
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  action      String
  model       String
  tokens      Int       @default(0)
  createdAt   DateTime  @default(now())
}